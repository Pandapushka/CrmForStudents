@using CrmForStudents.Models.ViewModels
@model AddStudentViewModels

<div>
    <h2>@Model.Name</h2>
    <h2>@Model.Email</h2>
    <h2>@Model.Phone</h2>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
               <th>Продукт</th> 
               <th>Цена</th> 
               <th>Дата начала</th> 
               <th>Дата окончания</th>
               <th></th>
               <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Services)
            {
                <tr>
                    <td>@i.Product.Name</td>
                    <td>@i.Product.Price</td>
                    <td>@i.StartDate</td>
                    <td>@i.FinishDate</td>
                    <td>
                        <div class="mt-3">
                            <a class="btn btn-danger" asp-controller="Services" asp-action="Delete" asp-route-id="@i.Id">Удалить услугу</a>
                        </div>
                    </td>
                    <td>
                        <div class="mt-3">
                            <a class="btn btn-primary" asp-controller="Services" asp-action="Edit" asp-route-id="@i.Id">Редактировать услугу</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>