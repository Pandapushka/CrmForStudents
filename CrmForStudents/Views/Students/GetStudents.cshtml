@using CrmForStudents.Models.Entities
@model List<Student>

<h1>Ученики</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Почта</th>
            <th>Телефон</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Редактировать</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
