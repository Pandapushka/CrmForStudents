@using CrmForStudents.Models.Entities
@model Student

<h1>Редактировать ученика</h1>

@if (Model is null)
{
    <p>Студент не найден</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Имя</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Почта</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Телефон</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Редактировать</button>
        </div>
        <div class="mt-3">
            <a class="btn btn-danger" asp-controller="Services" asp-action="Add" asp-route-id="@Model.Id">Добавить занятие</a>
        </div>
    </form>
}


