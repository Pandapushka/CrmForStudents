@using CrmForStudents.Models.ViewModels
@model AddStudentViewModels

<h1>Добавить ученика</h1>
<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Имя</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Почта</label>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Телефон</label>
        <input type="text" class="form-control" asp-for="Phone"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
</form>
