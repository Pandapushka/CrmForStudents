@using CrmForStudents.Models.DTO
@model ServicesAndProductVM

<h1>Добавить занятие</h1>
<form method="post">
    <div class="mt-3">
        @Html.Hidden("StudentId", Model.StudentId)
    </div>
    <div class="mt-3">
        <label class="form-label">Выберите продукт</label>
        <select class="form-select" asp-items="Model.Products" asp-for="ProductId"></select>
    </div>
    <div class="mt-3">
        <label class="form-label">Дата начала</label>
        <input type="datetime" class="form-control" asp-for="StartDate" />
    </div>
    <div class="mt-3">
        <label class="form-label">Дата окончания</label>
        <input type="datetime" class="form-control" asp-for="FinishDate" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
    
</form>