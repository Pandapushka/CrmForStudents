@using CrmForStudents.Models.DTO
@model DataAndServiceVM

<div class="text-center">
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Дата окончания</label>
            <input type="datetime" class="form-control" asp-for="DateTime" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>
</div>
<div class="text-center">
    @if (Model == null)
    {
        <h1>Выберите дату</h1>
    }
    else
    {
        @foreach (var i in Model.Service)
        {
            <tr>
                <td>@i.Student.Name</td>
                <td>@i.Product.Name</td>
                <td>@i.Product.Price</td>
                <td>@i.StartDate</td>
                <td>@i.FinishDate</td>
                <td>
                    <div class="mt-3">
                        <a class="btn btn-danger" asp-controller="Services" asp-action="Delete" asp-route-id="@i.Id">Удалить услугу</a>
                    </div>
                </td>
                <td>
                    <div class="mt-3">
                        <a class="btn btn-primary" asp-controller="Services" asp-action="Edit" asp-route-id="@i.Id">Редактировать услугу</a>
                    </div>
                </td>
            </tr>
        }
    }
</div>
